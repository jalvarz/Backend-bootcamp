<div class="container">
  <div class="row">
    <div class="col-12">
        <h2>Listado de Productos</h2>
        <br>
        {{#if listExists}}
		<table class="table table-image">
		  <tbody>
                <tr>
                    <th>Imagen</th>
                    <th>Titulo</th>
                    <th>Precio</th>
                </tr>
                {{#each productos}}
		        <tr>
                <td><img src={{this.thumbnail}} class="img-fluid img-thumbnail" ></td>
                <td>{{this.title}}</td> 
                <td>{{this.price}}</td>
		        </tr>
                {{/each}}
		  </tbody>
		</table> 
        {{else}}
        <H3>Upss, parece que aun no hay productos</H3>
        {{/if}}
        <a class="btn btn-primary" href="\" role="button">Agregar</a>
    </div>
  </div>
</div>