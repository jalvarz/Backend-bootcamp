<div class="container">
  <div class="row">
    <div class="col-12">
        <h2>Listado de Productos</h2>
        <br>
        {{#if listExists}}
		<table class="table table-image">
      <thead>
                <tr>
                    <th>Imagen</th>
                    <th>Titulo</th>
                    <th>Precio</th>
                    <th>Descripcion</th>
                    <th>Stock</th>
                    <th>Codigo</th>
                </tr>
      </thead>
		  <tbody id="table-body">
                {{#each productos}}
		        <tr>
                <td><img src={{this.thumbnail}} class="img-fluid img-thumbnail" ></td>
                <td>{{this.title}}</td> 
                <td>{{this.price}}</td>
                <td>{{this.description}}</td>
                <td>{{this.stock}}</td>
                <td>{{this.code}}</td>
		        </tr>
                {{/each}}
		  </tbody>
		</table> 
        {{else}}
        <H2>Upss, parece que aun no hay productos</H2>
        {{/if}}

      <h2>Centro de Mensajes</h2>
        <input type ="text" id ="mail" class="input" placeholder = "ingrese su mail"/>
        <input type ="text" id ="texto" class="input" placeholder = "mensaje a enviar"/>
        <button id="enviarMsg" value="Enviar" class="btn btn-primary" >Enviar</button>
      <div id = "messages"></div>
    
    </div>
  </div>
</div>